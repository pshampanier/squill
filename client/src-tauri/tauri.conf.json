{
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../../build/webapp/dist"
  },
  "package": {
    "productName": "squill",
    "version": "0.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true
      },
      "window": {
        "startDragging": true
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "resizable": true,
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768
      }
    ]
  }
}
