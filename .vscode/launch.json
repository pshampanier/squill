{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "agent (debug)",
      "cargo": {
        "args": ["build", "--bin=agent", "--package=squill"],
        "filter": {
          "name": "agent",
          "kind": "bin"
        }
      },
      "args": ["--verbose", "start", "--port", "8080", "--api-key", "x-dev"],
      "env": {
        "SQUILL_LOG_LEVEL": "trace"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "agent (unit tests)",
      "cargo": {
        "args": ["test", "--no-run", "--bin=agent", "--package=squill"],
        "filter": {
          "name": "agent",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "drivers (unit tests)",
      "cargo": {
        "args": ["test", "--no-run", "--package=drivers"]
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "webapp",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:1420",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "desktop (debug)",
      "cargo": {
        "args": ["build", "--manifest-path=./client/src-tauri/Cargo.toml", "--no-default-features"]
      },
      // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "ui:dev"
    }
  ]
}
