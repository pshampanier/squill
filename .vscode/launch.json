{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "agent (debug)",
      "cargo": {
        "args": ["build", "--package=agent"]
      },
      "args": ["--verbose", "start", "--dev"],
      "env": {
        "SQUILL_LOG_LEVEL": "trace"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "agent (unit tests)",
      "cargo": {
        "args": ["test", "--no-run", "--package=agent"]
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "drivers (unit tests)",
      "cargo": {
        "args": ["test", "--no-run", "--package=drivers"]
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "webapp",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:1420",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "desktop (debug)",
      "cargo": {
        "args": ["build", "--manifest-path=./client/src-tauri/Cargo.toml", "--no-default-features"]
      },
      // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "ui:dev"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "desktop (release)",
      "cargo": {
        "args": ["build", "--release", "--manifest-path=./client/src-tauri/Cargo.toml"]
      },
      // task for the `beforeBuildCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "build"
    },
    {
      "name": "previews",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:1420/src/__tests__/previews/previews.html",
      "webRoot": "${workspaceFolder}/client"
    }
  ]
}
